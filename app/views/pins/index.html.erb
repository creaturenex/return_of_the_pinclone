<script src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js" integrity="sha384-GNFwBvfVxBkLMJpYMOABq3c+d3KnQxudP/mGPkzpZSTYykLBNsZEnG2D9G/X/+7D" crossorigin="anonymous" async></script>

<p><%= image_tag("bgclone.jpg", class: "img-fluid d-block mx-auto", :alt => "background") %></p>

<div class="container">
  <div class="row" data-masonry='{"percentPosition": true }'>
    <% @pins.each do |pin| %>
        <div class="col-sm-6 col-lg-4 mb-4">
          <div class="card">
            <% if pin.image.attached? %>
              <div class="card-img-top bg-dark">
                <%= image_tag pin.image.variant(resize_to_limit: [400, 400]), class: "mx-auto d-block" %>
              </div>
            <% end %>
            <div class="card-body text-center">
              <h5 class="card-title"><%= link_to pin.title, pin %></h5>
              <p class="card-text"><%= pin.description %></p>
            </div>
            <div class="card-footer text-muted">
              <small>Last updated 3 mins ago</small>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
