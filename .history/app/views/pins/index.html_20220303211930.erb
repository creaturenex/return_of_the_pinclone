<%= image_tag("bgclone.jpg", class: "img-fluid d-block mx-auto", :alt => "background") %>
<div class="grid">
  <div class="grid-sizer"></div>
  <% @pins.each do |pin| %>
    <div class="grid-item">
      <h1><%= link_to pin.title, pin %></h1>
      <% if @pin.image.attached? %>
        <p>
          <%= image_tag @pin.image.variant(resize: "500x500" %>
        </p>
      <% end %>
    </div>
  <% end %>
</div>
