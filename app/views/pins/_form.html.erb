<%= simple_form_for @pin, html: {multipart: true} do |f| %>

  <% if @pin.errors.any? %>
    <div id="errors">
      <%= pluralize(@pin.errors.count, "error") %>
      <h1>prevented this Pin from saving</h1>
      <ul>
        <% @pin.errors.full_messages.each do |msg| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <% if @pin.image.attached? %>
      <%= image_tag @pin.image.variant(resize_to_limit: [400, 400]), class:"mx-auto d-block" %>
    <% end %>

    <%= f.label :image %>
    <%= f.file_field :image, {class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.input :title, input_html: {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :description, input_html: {class: 'form-control'} %>
  </div>
  <p></p>
  <div class="btn-group pull-right">
    <%= f.button :submit, class: "btn" %>
    <%= link_to "Back", root_path, class: "btn btn-outline-dark" %>
  </div>
<% end %>
