<%= javascript_pack_tag 'masonry' %>
<%= image_tag("bgclone.jpg", class: "img-fluid d-block mx-auto", :alt => "background") %>
<div class="container">
  <div class="row" data-masonry="{&quot;percentPosition&quot;: true }">
    <div class="card-column">
      <% @pins.each do |pin| %>
        <div class="col-sm-6 col-lg-4 mb-4">
          <div class="card">
            <% if pin.image.attached? %>
              <p>
                <%= image_tag pin.image.variant(resize: "300x300") %>
              </p>
            <% end %>
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to pin.title, pin %>
              </h5>
              <p class="card-text">
                <%= pin.description %>
              </p>
              <p class="card-text">
                <small class="text-muted">Last updated 3 mins ago</small>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
